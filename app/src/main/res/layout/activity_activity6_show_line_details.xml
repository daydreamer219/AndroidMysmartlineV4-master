<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity6ShowLineDetails"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activiti6_to_get_in_line_please_scan"
        android:textSize="@dimen/item_font_size"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textColor="@color/defaultThemeColorDark"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/activity_vertical_margin">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/activity6_generating_code"
            android:src="@drawable/qr_code_generation"
            android:layout_centerInParent="true"
            android:scaleType="center"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/activity6_print_text"
        android:textSize="@dimen/item_font_size"
        android:textColor="@color/defaultThemeColorDark"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>
    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity6_print_buton"
        android:layout_gravity="right"
        android:onClick="printTicket"
        android:textSize="@dimen/item_font_size"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/btn_back"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:padding="@dimen/activity_vertical_margin"/>



</LinearLayout>
